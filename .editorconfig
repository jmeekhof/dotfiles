root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2

[*.{yml,yaml,js,json}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 8

[*.php]
indent_size = 4
indent_style = space

[{*.bzl,BUILD,BUILD.bazel,WORKSPACE}]
indent_size = 4
indent_style = space
